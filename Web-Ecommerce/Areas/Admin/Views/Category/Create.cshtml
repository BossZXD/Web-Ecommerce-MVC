@using Web.Models
@model Category
<div class="container">
    <div class="form-container mt-4">
        <form method="post">
            <div class="form-header">
                <h2>สร้างหมวดหมู่ใหม่</h2>
                <p class="text-muted">กรอกข้อมูลเพื่อสร้างหมวดหมู่ใหม่ในระบบ</p>
            </div>

            <div class="form-group">
                <label for="categoryName" class="form-label">ชื่อหมวดหมู่</label>
                <input type="text" id="categoryName" name="Name" class="form-control form-control-lg" placeholder="กรุณากรอกชื่อหมวดหมู่" required />
            </div>

            <div class="form-group">
                <label for="displayOrder" class="form-label">ลำดับการแสดงผล</label>
                <input type="number" id="displayOrder" name="DisplayOrder" class="form-control form-control-lg" placeholder="กรุณากรอกลำดับการแสดงผล" required />
            </div>

            <div class="row btn-row mt-4">
                <div class="col-md-6 mb-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-circle me-2"></i>บันทึกข้อมูล
                    </button>
                </div>
                <div class="col-md-6 mb-2">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>กลับไปยังรายการ
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>