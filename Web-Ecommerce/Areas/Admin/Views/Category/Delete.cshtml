@model Web.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="form-container mt-4">
        <div class="form-header">
            <h2>ลบหมวดหมู่</h2>
            <p class="text-muted">ตรวจสอบข้อมูลก่อนทำการลบ</p>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">รายละเอียดหมวดหมู่</h5>
            </div>
            <div class="card-body">
                <div class="row detail-group">
                    <div class="col-md-3 detail-label">ชื่อหมวดหมู่</div>
                    <div class="col-md-9 detail-value">@Html.DisplayFor(model => model.Name)</div>
                </div>
                <div class="row detail-group">
                    <div class="col-md-3 detail-label">คำอธิบาย</div>
                    <div class="col-md-9 detail-value">@Html.DisplayFor(model => model.Description)</div>
                </div>
                <div class="row detail-group">
                    <div class="col-md-3 detail-label">ลำดับการแสดงผล</div>
                    <div class="col-md-9 detail-value">@Html.DisplayFor(model => model.DisplayOrder)</div>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <div class="row btn-row">
                <div class="col-md-6 mb-2">
                    <input type="submit" value="ยืนยันการลบ" class="btn btn-danger w-100" />
                </div>
                <div class="col-md-6 mb-2">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        กลับไปยังรายการ
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>