@using Web.Models
@model Category

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="form-container mt-4">
        <div class="form-header">
            <h2>แก้ไขหมวดหมู่</h2>
        </div>

        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">ชื่อหมวดหมู่</label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">คำอธิบาย</label>
                        <input asp-for="Description" class="form-control form-control-lg" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="DisplayOrder" class="form-label">ลำดับการแสดงผล</label>
                        <input asp-for="DisplayOrder" type="number" class="form-control form-control-lg" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="row btn-row mt-4">
                        <div class="col-md-6 mb-2">
                            <input type="submit" value="บันทึกการแก้ไข" class="btn btn-primary w-100" />
                        </div>
                        <div class="col-md-6 mb-2">
                            <a asp-action="Index" class="btn btn-secondary w-100">
                                กลับไปยังรายการ
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
