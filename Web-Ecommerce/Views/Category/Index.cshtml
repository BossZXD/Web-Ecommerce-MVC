@using Web.Models
@model List<Category>;
@{
    ViewData["Title"] = "Category Page";
}
<partial name="_Notification" />
<div class="container">
    <div class="form-container mt-4">
        <div class="form-header">
            <h2>จัดการหมวดหมู่</h2>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <h5 class="mb-0 mt-2">รายการหมวดหมู่</h5>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> เพิ่มหมวดหมู่ใหม่
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">ชื่อหมวดหมู่</th>
                                <th class="px-4 py-3">คำอธิบาย</th>
                                <th class="px-4 py-3 text-center" style="width: 120px;">ลำดับการแสดงผล</th>
                                <th class="px-4 py-3 text-center" style="width: 200px;">จัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(o => o.DisplayOrder))
                            {
                                <tr>
                                    <td class="px-4 py-3 align-middle">@item.Name</td>
                                    <td class="px-4 py-3 align-middle">@item.Description</td>
                                    <td class="px-4 py-3 align-middle text-center">@item.DisplayOrder</td>
                                    <td class="px-4 py-3 align-middle text-center">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i> แก้ไข
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash-fill"></i> ลบ
                                        </a>
                                    </td>
                                </tr>
                            }

                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center p-4">
                                        <div class="py-5">
                                            <i class="bi bi-folder-x" style="font-size: 3rem; color: #dee2e6;"></i>
                                            <p class="mt-3 text-muted">ไม่พบข้อมูลหมวดหมู่</p>
                                            <a asp-controller="Category" asp-action="Create" class="btn btn-primary mt-2">
                                                <i class="bi bi-plus-circle"></i> เพิ่มหมวดหมู่ใหม่
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
